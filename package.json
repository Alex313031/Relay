{
  "name": "relay-irc",
  "appName": "relay-irc",
  "productName": "Relay IRC",
  "applicationId": "com.alex313031.relayirc",
  "version": "0.7.2",
  "description": "Minimalistic IRC client built with Electron & React.",
  "repository": "https://github.com/Alex313031/Relay-IRC.git",
  "author": "Alex313031 <alex313031@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Alex313031/Relay-IRC#readme",
  "bugs": {
    "url": "https://github.com/Alex313031/Relay-IRC/issues"
  },
  "main": "./src/index.js",
  "scripts": {
    "start": "npm run sass && cd ./src && cross-env NODE_ENV=production electron ./",
    "dev": "npm run sass && cd ./src && cross-env NODE_ENV=development electron ./",
    "sass": "node-sass ./src/sass/app.scss --output ./src/static/",
    "test": "npm run lint",
    "lint": "eslint ./src/ ./test/",
    "jest": "jest --verbose",
    "flow": "flow",
    "runBuild": "./dist/linux-unpacked/relay-irc",
    "builderDir": "electron-builder --dir",
    "builderDist": "electron-builder",
    "build": "bash ./resources/build.sh --dir",
    "dist": "bash ./resources/build.sh --dist",
    "clean": "rimraf ./build && rimraf ./dist && rimraf ./src/node_modules && rimraf ./node_modules",
    "distclean": "rimraf ./build && rimraf ./dist",
    "burn": "rimraf ./package-lock.json"
  },
  "dependencies": {
    "@electron/remote": "2.1.1",
    "classnames": "2.5.1",
    "electron-context-menu": "3.6.1",
    "electron-log": "4.4.8",
    "electron-store": "8.1.0",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-linkify": "0.2.2",
    "react-redux": "7.2.1",
    "redux": "4.2.1",
    "redux-thunk": "2.4.2",
    "slate-irc": "0.9.3",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "7.23.4",
    "@babel/core": "7.23.7",
    "@babel/preset-env": "7.23.7",
    "@babel/preset-flow": "7.23.3",
    "@babel/preset-react": "7.23.3",
    "@babel/register": "7.23.7",
    "asar": "3.2.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "28.1.3",
    "babel-plugin-transform-node-env-inline": "0.4.3",
    "cross-env": "7.0.3",
    "electron": "git+https://github.com/Alex313031/electron-releases-22.git",
    "electron-builder": "23.6.0",
    "electron-devtools-installer": "3.2.0",
    "electron-reloader": "1.2.3",
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "eslint-config-standard-react": "11.0.1",
    "eslint-plugin-flowtype": "7.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.2.0",
    "eslint-plugin-react": "7.29.4",
    "flow-bin": "0.199.1",
    "jest": "28.1.3",
    "node-sass": "7.0.3",
    "redux-logger": "3.0.6",
    "rimraf": "3.0.2"
  },
  "resolutions": {
    "electron": "git+https://github.com/Alex313031/electron-releases-22.git"
  }
}
